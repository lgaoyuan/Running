<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <com.csu.runningapplication.CircleImageView
            android:id="@+id/friends_image"
            android:src="@drawable/user_192"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/friends_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="50px"
                android:textColor="#8a8a8a"
                android:text="活力中南"/>
            <TextView
                android:id="@+id/friends_something"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活力中南就是非常有活力，活力中南就是非常有活力，活力中南就是非常有活力。"
                android:textColor="#8a8a8a"
                android:textSize="37px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
<!--        <Button-->
<!--            android:id="@+id/friends_agree"-->
<!--            android:layout_marginTop="-20dp"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:text="同意"/>-->

    </LinearLayout>

</LinearLayout>